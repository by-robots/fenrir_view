<% if Dir.exist?(FenrirView.configuration.system_path.join("modules")) || Dir.exists?(File.join(FenrirView.root, "lib", "fenrir_view", "design_system", "modules")) %>
  <%# depend_on FenrirView.configuration.system_path.join("modules").to_s %>

  <% Dir.glob( FenrirView.pattern("modules") ).each do |module_dir| %>
    <% module_name = File.basename module_dir %>
    <% module_asset = "#{module_name}/#{module_name}.scss" %>

    /* imported module: <%= module_name %> */
    @import '<%= module_asset %>';
  <% end %>
<% else %>
  /* FenrirView: Modules directory not found! */  
<% end %>
