<% if Dir.exist?(FenrirView.configuration.system_path.join("elements")) || Dir.exists?(File.join(FenrirView.root, "lib", "fenrir_view", "design_system", "elements")) %>
  <%# depend_on FenrirView.configuration.system_path.join("elements").to_s %>

  <% Dir.glob( FenrirView.pattern("elements") ).each do |element_dir| %>
    <% element_name = File.basename element_dir %>
    <% element_asset = "#{element_name}/#{element_name}.scss" %>

    /* imported element: <%= element_name %> */
    @import '<%= element_asset %>';
  <% end %>
<% else %>
  /* FenrirView: Elements directory not found! */  
<% end %>
