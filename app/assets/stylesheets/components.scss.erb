<% FenrirView.configuration.included_stylesheets.each do |included_stylesheet| %>
  <%= require_asset included_stylesheet %>
<% end %>

<% if Dir.exist?(FenrirView.configuration.system_path.join("components")) %>
  <% depend_on FenrirView.configuration.system_path.join("components").to_s %>
  <% Dir.glob(FenrirView.configuration.system_path.join("components/*")).each do |component_dir| %>
    <% component_name = File.basename component_dir %>
    <% component_asset = "#{component_name}/#{component_name}.scss" %>

    @import '<%= component_asset %>';
  <% end %>
<% else %>
  /* FenrirView: Components directory not found! */  
<% end %>
