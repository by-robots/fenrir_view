<% FenrirView.configuration.included_stylesheets.each do |included_stylesheet| %>
  <%= require_asset included_stylesheet %>
<% end %>
<% if Dir.exist?(FenrirView.configuration.system_path) %>
  <% depend_on FenrirView.configuration.system_path.to_s %>
  <% Dir.glob(FenrirView.configuration.system_path.join('*')).each do |variant_dir|
    Dir.glob("#{variant_dir}/*").each do |component_dir|
      component = File.basename component_dir
      begin
        require_asset "#{variant_dir}/#{component}/#{component}.scss"
      rescue Sprockets::FileNotFound
        Rails.logger.debug("FenrirView: stylesheet not found for #{variant_dir}/'#{component}'")
  %>
/* FenrirView: stylesheet not found for component '<%= component %>' */
  <%
      end
    end
  end %>
<% else %>
  <% depend_on Rails.root.join('app').to_s %>
<% end %>
