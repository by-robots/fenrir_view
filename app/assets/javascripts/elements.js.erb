<% if Dir.exist?( FenrirView.pattern_type("elements") ) %>
  <% Dir.glob( FenrirView.patterns_for("elements") ).each do |element_dir| %>
    <% element_name = File.basename element_dir %>
    <% element_asset = "#{element_name}/#{element_name}.js" %>
    <% begin %>
      <%= require_asset element_asset %>
    <% rescue Sprockets::FileNotFound %>
      <% Rails.logger.debug("FenrirView: javascript not found for elements/'#{element_name}', looked in: #{element_asset}") %>
      /* FenrirView: javascript not found for element '<%= element_name %>', looked for: '<%= element_asset %>' */
    <% end %>
  <% end %>
<% else %>
  /* FenrirView: elements directory not found! */
<% end %>
