<% if Dir.exist?(FenrirView.configuration.system_path) %>
  <% depend_on FenrirView.configuration.system_path.to_s %>
  
  <% Dir.glob( FenrirView.pattern("components") ).each do |variant_dir|
    Dir.glob("#{variant_dir}/*").each do |component_dir|
      component = File.basename component_dir
      begin
        require_asset "#{variant_dir}/#{component}/#{component}.js"
      rescue Sprockets::FileNotFound
        Rails.logger.debug("FenrirView: javascript not found for #{variant_dir}/'#{component}'")
  %>
/* FenrirView: javascript not found for component '<%= component %>' */
  <%
      end
    end
  end %>
<% else %>
  <% depend_on Rails.root.join('app').to_s %>
<% end %>
