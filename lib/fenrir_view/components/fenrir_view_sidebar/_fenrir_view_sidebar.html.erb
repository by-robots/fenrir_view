<nav class="<%= item_classes %>">
  <% category_facades.each do |category| %>
    <% if category.items.any? %>
      <section class="<%= category.style %>">
        <% if category.name? %>
          <p class="fenrir-view-sidebar__category-name">
            <%= category.name %>
          </p>
        <% end %>

        <% category.items.each do |item| %>
          <% classes = ['fenrir-view-sidebar__item'] %>
          <% classes.push('is-current-page') if current_page?(item.link) %>

          <%= link_to item.title, item.link, class: classes %>
        <% end %>
      </section>
    <% end %>
  <% end %>
</nav>
